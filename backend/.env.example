# ==================
# LifeTag Backend - Environment Template
# Copy this file to ".env" and fill actual values
# ==================

# ----- PostgreSQL -----
DB_HOST=localhost
DB_PORT=5432
DB_NAME=LifeTagDB
DB_USER=postgres
DB_PASSWORD=your_db_password_here

# ----- JWT -----
JWT_SECRET=your_strong_jwt_secret_here

# ----- Encryption (AES-256) -----
ENCRYPTION_KEY=your_32_or_64_char_key_here

# ----- Backend Server -----
PORT=5000

# ----- MinIO (local S3) -----
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_ENDPOINT=http://localhost:9000
MINIO_PORT=9000
MINIO_USE_SSL=false

# Bucket name (must exist in MinIO)
AWS_S3_BUCKET_NAME=lifetag-records
